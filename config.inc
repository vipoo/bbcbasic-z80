USE_HBIOS	EQU	1		; 1 - Enable code to use Extended HBIOS calls to determine H/W ports
					; 0 - Use Fixed Port Numbers
HBIOS		EQU	08

VDA		EQU	$40
VDAINI		EQU	VDA + 0		; INITIALIZE VDU
VDAQRY		EQU	VDA + 1		; QUERY VDU STATUS
VDARES		EQU	VDA + 2		; SOFT RESET VDU
VDADEV		EQU	VDA + 3		; DEVICE INFO
VDASCS		EQU	VDA + 4		; SET CURSOR STYLE
VDASCP		EQU	VDA + 5		; SET CURSOR POSITION
VDASAT		EQU	VDA + 6		; SET CHARACTER ATTRIBUTE
VDASCO		EQU	VDA + 7		; SET CHARACTER COLOR
VDAWRC		EQU	VDA + 8		; WRITE CHARACTER
VDAFIL		EQU	VDA + 9		; FILL
VDACPY		EQU	VDA + 10	; COPY
VDASCR		EQU	VDA + 11	; SCROLL
VDAKST		EQU	VDA + 12	; GET KEYBOARD STATUS
VDAKFL		EQU	VDA + 13	; FLUSH KEYBOARD BUFFER
VDAKRD		EQU	VDA + 14	; READ KEYBOARD
VDAIO		EQU	VDA + 15     	; RETURN KEY HARDWARE PORTS

SND		EQU	$50
SNDINI		EQU	SND + 0		; INITIALIZE SOUND SYSTEM
SNDVOL		EQU	SND + 1		; SET VOL - D is channel, E contains volume (255 MAX, 0 SILENT) - scaled as required by driver (eg: maps to just 4 bit resolution for SN76489)
SNDPIT		EQU	SND + 2		; SET PITCH - D is channel, HL contains pitch (0 Lowest Note, FFFF highest note) - scaled by driver (eg: maps to just 10 bits for SN76489 )

SYSGET		EQU	$F8
SNDCNT		EQU	$50